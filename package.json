{
  "name": "kasflow",
  "version": "0.1.0",
  "private": true,
  "description": "KasFlow - Instant Kaspa Payments with Passkey Wallet SDK",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm -r build",
    "build:sdk": "pnpm --filter @kasflow/passkey-wallet build",
    "build:web": "pnpm --filter web build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules"
  },
  "keywords": [
    "kaspa",
    "passkey",
    "wallet",
    "payment",
    "cryptocurrency",
    "webauthn"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
